<Page x:Class="TacticalReload.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TacticalReload.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1270">
    <Grid> 
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/Background.png" Stretch="Uniform" />
        </Grid.Background>
        <DockPanel LastChildFill="False" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="300" Height="250" Margin="0,0,0,75">
            <Button DockPanel.Dock="Top" Margin="0,0,0,15" Content="Play" Padding="0,15,0,15" FontSize="40" Click="PlayReloader" />
            <Button DockPanel.Dock="Top" Margin="0,0,0,15" Content="Exit" Padding="0,15,0,15" FontSize="30" Click="ExitGame" />
        </DockPanel>

    </Grid>
</Page>
